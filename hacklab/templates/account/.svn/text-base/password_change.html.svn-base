{% extends "base.html" %}

{% block title %}Промена на лозинка{% endblock %}

{% block main_content %}
<div id="st">
<h2>Промени ја лозинката</h2>
{% if errors %}
<p class="error">{{ errors }}</p>
{% endif %}
<form method="post" action="">
<dl>
<dt><label for="id_stara_lozinka">Стара лозинка:</label></dt>
<dd>{{ form.old_password }}</dd>
<dt><label for="id_nova_lozinka">Нова лозинка:</label></dt>
<dd>{{ form.new_password1 }}</dd>
<dt><label for="id_nova_lozinka2">Новата лозинка уште еднаш:</label></dt>
<dd>{{ form.new_password2 }}</dd>
<dt><input class="button" type="submit" value="Смени ја лозинката" /></dt>
</dl>
</form>
</div>
{% endblock %}
